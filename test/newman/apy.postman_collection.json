				{
					"listen": "test",
					"script": {
						"id": "82fe43b5-71c2-418f-b3bf-1e218be8c761",
						"type": "text/javascript",
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"var schema = {",
							"    \"result\": [{",
							"         \"distance\": {",
							"            \"type\":\"integer\"",
							"             },",
							"         \"name\": {",
							"             \"type\":\"string\"",
							"             }",
							"    }]",
							"};",
							"",
							"pm.test('Validate json schema.', function() {",
							"  pm.expect(tv4.validate(jsonData, schema)).to.be.true;",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
